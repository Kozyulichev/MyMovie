<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/popular_film_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/tihoe_mesto_new"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popular_film_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Тихое место 2"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/popular_film_image"
        app:layout_constraintTop_toBottomOf="@id/popular_film_image" />

    <TextView
        android:id="@+id/popular_film_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="474 дня прошло после нападения на Землю охотящихся на звук существ, семья Эбботт продолжает бороться за жизнь в полной тишине"
        app:layout_constraintTop_toBottomOf="@id/popular_film_name"
        app:layout_constraintStart_toStartOf="@id/popular_film_name"
        android:textSize="12sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>